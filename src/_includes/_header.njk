<nav
  class="flex items-center justify-between flex-wrap pl-3 sm:px-8 py-2 fixed w-full z-10 top-0 bg-white shadow-md"
  x-data="{ isOpen: false }"
  @keydown.escape="isOpen = false"
  
>
  <!--Logo and Left Items-->
  <div class="flex items-center flex-shrink-0 text-white sm:mr-6">
    <a class="text-white no-underline hover:text-white hover:no-underline" href="#">
      <img class="h-10" src="/assets/SIB_blue_small.jpg" alt="SIB">
    </a>
  </div>

   <!--Toggle button (hidden on large screens)-->
  <button @click="isOpen = !isOpen" type="button" class="block lg:hidden px-2 text-gray-700 hover:text-black focus:outline-none focus:text-black" :class="{ 'transition transform-180': isOpen }">
    <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path x-show="isOpen" fill-rule="evenodd" clip-rule="evenodd" d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"/>
      <path x-show="!isOpen" fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"/>
    </svg>
  </button>

  <!--Menu-->
  <div
    class="w-full flex-grow lg:flex lg:items-center lg:w-auto"
    :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }"
    @click.away="isOpen = false"
    x-show.transition="true"
  >
    <ul class="pt-6 lg:pt-0 list-reset lg:flex justify-end flex-1 items-center">
      <li class="mr-3">
        <a
          class="block py-2 px-4 text-black font-semibold rounded hover:bg-red-200"
          href="#"
          @click="isOpen = false"
          >Active
        </a>
      </li>
      <li class="mr-3">
        <a
          class="block text-gray-600  hover:text-black hover:text-underline py-2 px-4 font-semibold rounded hover:bg-red-200"
          href="#"
          @click="isOpen = false"
          >Inactive
        </a>
      </li>
    </ul>
  </div>
</nav>